<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Health Time</title>

    <link rel="stylesheet" href="~/styles/main.css" asp-append-version="true" />
    <partial name="_ToastNotificationPartial" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
</head>
<body class="landing-page">
    <div class="background-overlay"></div>

    <nav class="landing-nav">
        <div class="nav-container">
            <div class="nav-logo">
                <i class="fas fa-clock"></i> Health Time
            </div>
            <a asp-controller="Painel" asp-action="Index" class="btn primary-btn">Acessar Plataforma</a>
        </div>
    </nav>

    @RenderBody()

    <footer class="landing-footer">
        <p>&copy; @DateTime.Now.Year - Health Time. Todos os direitos reservados.</p>
    </footer>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>