@using GuedesTime.MVC.Models.Helpers

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - Health Time</title>

    <link rel="stylesheet" href="~/styles/main.css" asp-append-version="true" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.css">

</head>
<body>
    <partial name="_LayoutCarregamento" />
    <div class="container">
        <aside class="sidebar" id="sidebar">
            <h1 class="logo">Health Time</h1>

            <partial name="_LoginPartial" />

            <nav class="sidebar-nav">
                <ul>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Painel")" asp-controller="Painel" asp-action="Index"><i class="fas fa-home"></i>Painel</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Instituicao")" asp-controller="Instituicao" asp-action="Index"><i class="fas fa-university"></i>Instituição</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Professores")" asp-controller="Professores" asp-action="Index"><i class="fas fa-chalkboard-teacher"></i>Professores</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Disciplinas")" asp-controller="Disciplinas" asp-action="Index"><i class="fas fa-book-open"></i>Disciplinas</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Series")" asp-controller="Series" asp-action="Index"><i class="fas fa-graduation-cap"></i>Séries</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Turmas")" asp-controller="Turmas" asp-action="Index"><i class="fas fa-users"></i>Turmas</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Salas")" asp-controller="Salas" asp-action="Index"><i class="fas fa-building"></i>Salas de Aula</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Horarios")" asp-controller="Horarios" asp-action="Index"><i class="fas fa-clock"></i>Horários</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Feriados")" asp-controller="Feriados" asp-action="Index"><i class="fas fa-calendar-alt"></i>Feriados</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "PlanosAula")" asp-controller="PlanosAula" asp-action="Index"><i class="fas fa-calendar-check"></i>Planos de Aula</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Revisao")" asp-controller="Revisao" asp-action="Index"><i class="fas fa-user-check"></i>Revisão</a>
                    </li>
                    <li>
                        <a class="@ViewHelper.IsActive(ViewContext, "Configuracoes")" asp-controller="Configuracoes" asp-action="Index"><i class="fas fa-cog"></i>Configurações</a>
                    </li>
                </ul>
            </nav>
            <div style="margin-top: auto; padding-top: 24px;">
                <partial name="_LogoutPartial" />
            </div>
        </aside>

        <div class="main-content">
            <header class="mobile-header">
                <button id="sidebar-toggle" class="sidebar-toggle-btn"><i class="fas fa-bars"></i></button>
                <h2 class="mobile-header-title">Health Time</h2>
            </header>

            <main role="main" class="pb-3">
                @RenderBody()
            </main>
        </div>
    </div>
    <div id="toast-container" class="toast-container"></div>
    <div id="modal-placeholder" class="modal-overlay">
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.6.1/cropper.min.js"></script>
    <script type="module" src="~/js/main.js" asp-append-version="true"></script>
    <partial name="_ToastNotificationPartial" />
    <partial name="_ModalSkeletons" />
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>