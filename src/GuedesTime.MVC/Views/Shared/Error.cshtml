@model GuedesTime.MVC.ViewModels.ErrorViewModel
@{
    ViewData["Title"] = "Ocorreu um erro";
    Layout = null;
    var statusCode = Model?.ErroCode ?? 500;
    string titulo = statusCode == 404 ? "Página não encontrada" : "Anomalia Detectada";
    string mensagem = statusCode == 404
        ? "A página que você tentou acessar não existe ou foi removida."
        : "Minhas sinapses digitais encontraram uma instabilidade no sistema. Já estou reconfigurando os circuitos e notifiquei a equipe de desenvolvimento para uma análise aprofundada.";

    string status = statusCode == 404 ? "Página Inexistente" : "Analisando falha...";
    string imagem = statusCode == 404 ? "notfound.svg" : "error.svg";
}

<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Anomalia Detectada - Health Time</title>
    <link rel="stylesheet" href="~/styles/main.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
</head>
<body class="bg-dark">
    <div class="error-page-wrapper-ai">
        <div class="error-content-box-ai card">
            <div class="error-grid-ai">

                <div class="error-svg-container-ai">
                    <img src="~/img/@imagem" class="error-image-ai" />
                </div>

                <div class="error-text-content-ai">
                    <h1 class="error-title-ai">@titulo</h1>
                    <p class="error-message-ai">@mensagem</p>
                    <div class="error-status-ai">
                        <span>Status:</span>
                        <span class="status-badge-ai">@status</span>
                    </div>
                    <div class="error-actions">
                        <a href="javascript:location.reload();" class="btn secondary-btn">
                            <i class="fas fa-sync-alt"></i> Tentar Novamente
                        </a>
                        <a href="@Url.Action("Index", "Home")" class="btn primary-btn">
                            <i class="fas fa-shield-alt"></i> Retornar à Área Segura
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</body>
</html>