@page
@model RegisterModel
@{
    ViewData["Title"] = "Criar Conta";
}

<h3 class="auth-title">Crie sua conta</h3>

<form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>

    <div class="form-group">
        <label asp-for="Input.Email">Endereço de e-mail</label>
        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
        <span asp-validation-for="Input.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.Password">Crie uma senha</label>
        <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.Password" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Input.ConfirmPassword">Confirme a senha</label>
        <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
        <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
    </div>

    <div class="auth-actions">
        <button id="registerSubmit" type="submit" class="btn primary-btn">Registrar</button>
    </div>
</form>

<p class="auth-switch">Já possui uma conta? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Faça login</a></p>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}